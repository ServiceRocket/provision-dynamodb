{
  "name": "provision-dynamodb",
  "version": "0.0.0-development",
  "description": "Dynamic DynamoDB provisioning based on serverless framework.",
  "main": "index.js",
  "author": "ServiceRocket Engineering",
  "license": "MIT",
  "bin": {
    "provision-dynamodb": "bin/cli.js"
  },
  "scripts": {
    "test": "flow check && ava",
    "compile": "babel lib --out-dir dist",
    "prepublish": "npm run compile",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "aws-sdk": "^2.20.0",
    "chalk": "^1.1.3",
    "nconf": "^0.8.4",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-regenerator": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-babili": "^0.0.11",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "eslint": "^3.16.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.40.0",
    "semantic-release": "^6.3.2",
    "xo": "^0.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ServiceRocket/provision-dynamodb.git"
  },
  "ava": {
    "files": [
      "lib/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "xo": {
    "envs": [
      "node",
      "flow"
    ],
    "esnext": true,
    "rules": {
      "import/prefer-default-export": "off",
      "no-duplicate-imports": "warn"
    },
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "ignores": [],
    "space": 2,
    "overrides": [
      {
        "files": [
          "bin/cli.js"
        ],
        "rules": {
          "no-unused-expressions": "warn"
        }
      }
    ]
  }
}
